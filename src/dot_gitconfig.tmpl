[core]
  excludesfile = {{ .home }}/.gitignore
[init]
	defaultBranch = main
[user]
	name = {{ .user }}
	email = {{ .email }}
	signingkey = {{ .signingkey }}
[tag]
	forceSignAnnotated = true
[commit]
	gpgsign = true
[http]
	proxy = http://127.0.0.1:{{ .proxy.http }}
[https]
	proxy = http://127.0.0.1:{{ .proxy.http }}
[push]
	followTags = true
