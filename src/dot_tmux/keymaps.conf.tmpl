set -g mode-keys vi
set -g mouse on
set -g status-keys emacs
# TODO: enable this if tmux support Kitty Keyboard Protocol?
set -g extended-keys off
set -g extended-keys-format csi-u

# Modes
set -g prefix C-\\
bind C-\\ send-prefix
bind -n M-u copy-mode

# Copy mode navigation and selection
bind -T copy-mode-vi v send -X begin-selection
bind -T copy-mode-vi a send -X cancel
bind -T copy-mode-vi i send -X cancel
bind -T copy-mode-vi Escape send -X cancel
bind -T copy-mode-vi C-c send -X clear-selection
bind -T copy-mode-vi C-v send -X begin-selection \; send-keys -X rectangle-toggle

bind -T copy-mode-vi M-h select-pane -L
bind -T copy-mode-vi M-j select-pane -D
bind -T copy-mode-vi M-k select-pane -U
bind -T copy-mode-vi M-l select-pane -R


# Copy and paste
set -gF @copy                '#{@popup-proxy} loadb -'        # copy to only tmux buffer
set -gF @copy-clipboard      '#{@popup-proxy} loadb -w -'     # copy to both tmux buffer and clipboard
set -gF @copy-line           'tr -d \\n | #{@copy}'           # copy with trailing newline removed
set -gF @copy-line-clipboard 'tr -d \\n | #{@copy-clipboard}' # copy with trailing newline removed

set -gF copy-command '#{@copy}' # copy only to tmux buffer by default

set -g @paste          { run '#{@popup-sync-buffer}' ; pasteb -p }
set -g @push-clipboard { run '#{@popup-proxy} saveb - | #{@copy-clipboard}' }

bind -T copy-mode-vi y   send -X copy-pipe-and-cancel '#{@copy}'
bind -T copy-mode-vi M-y send -X copy-pipe-and-cancel '#{@copy-clipboard}'
bind -T copy-mode-vi Y   send -X copy-pipe-end-of-line-and-cancel '#{@copy-line}'
bind -T copy-mode-vi M-Y send -X copy-pipe-end-of-line-and-cancel '#{@copy-line-clipboard}'
bind -T copy-mode-vi p   send -X cancel \; run -C '#{@paste}'
bind -T copy-mode-vi M-p send -X cancel \; run -C '#{@push-clipboard}'

bind -N 'Copy current line from shell'         -T prefix Y   run "~/.tmux/copy_shell '##{@copy-line}'"
bind -N 'Copy current line from shell'         -T prefix M-y run "~/.tmux/copy_shell '##{@copy-line-clipboard}'"
bind -N 'Paste most recent buffer'             -T prefix ]   run -C '#{@paste}'
bind -N 'Paste most recent buffer'             -T prefix P   run -C '#{@paste}'
bind -N 'Push most recent buffer to clipboard' -T prefix M-p run -C '#{@push-clipboard}'

# Sessions
bind -n M-N new-session
bind -n M-o popup -BE -w100% -h100% ~/.tmux/fzf_session_switch \
    --border=none \
    --preview-window=down,noinfo \
    --preview-border=top \
    --bind="ctrl-b:preview-half-page-up" \
    --bind="ctrl-f:preview-half-page-down" \
    --bind="ctrl-x:execute-silent(tmux kill-session -t {1})+exclude"

# Panes
bind -n M-- split-window -v -c '#{pane_current_path}'
bind -n M-_ split-window -fv -c '#{pane_current_path}'
bind -n M-\\ split-window -h -c '#{pane_current_path}'
bind -n M-| split-window -fh -c '#{pane_current_path}'
bind -n M-m resize-pane -Z
bind -n M-w confirm-before -p 'Close current pane? (y/n)' kill-pane

bind -n M-h if -F '#{@pane-is-vim}' 'send-keys M-h' 'select-pane -L'
bind -n M-j if -F '#{@pane-is-vim}' 'send-keys M-j' 'select-pane -D'
bind -n M-k if -F '#{@pane-is-vim}' 'send-keys M-k' 'select-pane -U'
bind -n M-l if -F '#{@pane-is-vim}' 'send-keys M-l' 'select-pane -R'

bind -n M-H if -F '#{@pane-is-vim}' 'send-keys M-H' 'resize-pane -L 3'
bind -n M-J if -F '#{@pane-is-vim}' 'send-keys M-J' 'resize-pane -D 3'
bind -n M-K if -F '#{@pane-is-vim}' 'send-keys M-K' 'resize-pane -U 3'
bind -n M-L if -F '#{@pane-is-vim}' 'send-keys M-L' 'resize-pane -R 3'

bind -n M-Left swap-pane -s '{left-of}'
bind -n M-Down swap-pane -s '{down-of}'
bind -n M-Up swap-pane -s '{up-of}'
bind -n M-Right swap-pane -s '{right-of}'

bind M-h select-pane -L
bind M-j select-pane -D
bind M-k select-pane -U
bind M-l select-pane -R

bind -r M-H resize-pane -L 3
bind -r M-J resize-pane -D 3
bind -r M-K resize-pane -U 3
bind -r M-L resize-pane -R 3

# Tabs
bind -n M-n new-window -c '#{pane_current_path}'
bind -n M-W confirm-before -p 'Close current tab? (y/n)' kill-window

bind -n M-, select-window -t '{previous}'
bind -n M-. select-window -t '{next}'

bind -n M-< swap-window -t '{previous}' \; select-window -t '{previous}'
bind -n M-> swap-window -t '{next}' \; select-window -t '{next}'

bind -n M-1 select-window -t :=1
bind -n M-2 select-window -t :=2
bind -n M-3 select-window -t :=3
bind -n M-4 select-window -t :=4
bind -n M-5 select-window -t :=5
bind -n M-6 select-window -t :=6
bind -n M-7 select-window -t :=7
bind -n M-8 select-window -t :=8
bind -n M-9 select-window -t :=9

# Popups
bind -n M-g run "#{@popup-toggle} -Ed'##{pane_current_path}' -w75% -h90% --name=lazygit --id-format='#{@popup-id-format-by-cwd}' lazygit"
bind -n M-t run "#{@popup-toggle} -Ed'##{pane_current_path}' -w75% -h90% --name=scratch"

# Misc
bind C-b run "tmux -Ldefault run '#{@base16-toggle-background}' && tmux -Lpopup run '#{@base16-toggle-background}'"
bind R source-file ~/.tmux.conf

