[init]
	defaultBranch = main

# Personal info
[user]
	name = {{ .name }}
	email = {{ .email }}
	{{ if .gpg.enabled }}
	signingkey = {{ .gpg.signingkey }}
	{{ end }}
[tag]
	forceSignAnnotated = true
[commit]
	{{ if .gpg.enabled }}
	gpgsign = true
	{{ end }}

# Network
{{ if .proxy.enabled }}
[http]
	proxy = socks5h://127.0.0.1:{{ .proxy.socksPort }}
[https]
	proxy = socks5h://127.0.0.1:{{ .proxy.socksPort }}
{{ end }}

# Remote
[pull]
	rebase = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
	algorithm = histogram


[delta]
	navigate = true
	diff-so-fancy = true
	syntax-theme = base16

	# Colors
	commit-style                  = raw
	file-style                    = brightyellow
	hunk-header-style             = bold syntax
	minus-style                   = bold red
	minus-non-emph-style          = minus-style
	minus-emph-style              = reverse bold red
	minus-empty-line-marker-style = minus-style
	zero-style                    = normal
	plus-style                    = bold green
	plus-non-emph-style           = plus-style
	plus-emph-style               = reverse bold green
	plus-empty-line-marker-style  = plus-style
	grep-file-style               = purple
	grep-line-number-style        = green
	whitespace-error-style        = reverse purple

