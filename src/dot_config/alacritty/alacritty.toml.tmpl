[general]
import = ["colors.toml"]

[window]
decorations = "none"
padding = { x = 2, y = 2 }
dynamic_padding = true

[cursor]
style = { shape = "Block", blinking = "Always" }
vi_mode_style = { shape = "Block", blinking = "Always" }
blink_interval = 500

[font]
normal.family = "monospace"
size = {{.font.monospaceSize}}
builtin_box_drawing = true

[scrolling]
history = 0

[terminal]
shell = { program = "tmux", args = ["new", "-As", "main"] }
osc52 = "OnlyCopy"
