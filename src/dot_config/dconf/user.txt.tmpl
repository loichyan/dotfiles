#== Theme ==#

[org/gnome/desktop/wm/preferences]
button-layout='appmenu:close'
num-workspaces=4
titlebar-font='Sans Bold 11'

[org/gnome/desktop/interface]
clock-format='12h'
color-scheme='prefer-dark'
font-name='Sans 11'
document-font-name='Sans 11'
monospace-font-name='Monospace 10'
cursor-theme='Yaru'
gtk-theme='Yaru-dark'
icon-theme='Yaru-dark'
gtk-key-theme='Default'

[org/gnome/desktop/sound]
theme-name='Yaru'

[org/gnome/shell/extensions/user-theme]
name='Yaru-dark'

[org/gnome/terminal/legacy]
theme-variant='dark'

#== Proxy ==#

[system/proxy]
mode='manual'

[system/proxy/http]
host='127.0.0.1'
port={{ .proxy.http }}

[system/proxy/https]
host='127.0.0.1'
port={{ .proxy.http }}

[system/proxy/socks]
host='127.0.0.1'
port={{ .proxy.socks }}

#== Input ==#

[org/gnome/desktop/input-sources]
show-all-sources=true
sources=[('xkb', 'us'), ('ibus', 'rime')]
xkb-options=['ctrl:nocaps', 'caps:ctrl_modifier']

[org/gnome/desktop/peripherals/keyboard]
numlock-state=true

[org/gnome/desktop/peripherals/mouse]
natural-scroll=true

[org/gnome/desktop/peripherals/touchpad]
tap-to-click=true
two-finger-scrolling-enabled=true

#== Extensions ==#

[org/gnome/shell/extensions/appindicator]
legacy-tray-enabled=true
tray-pos='right'

[org/gnome/shell/extensions/clipboard-indicator]
display-mode=2
strip-text=true
next-entry=['<Super>bracketright']
prev-entry=['<Super>bracketleft']

[org/gnome/shell/extensions/dash-to-panel]
isolate-monitors=true
isolate-workspaces=true
animate-appicon-hover=true
appicon-margin=4
appicon-padding=4
dot-position='BOTTOM'
group-apps=true
hot-keys=false
multi-monitors=false
panel-lengths='{"0":100,"1":100}'
panel-positions='{"0":"TOP","1":"TOP"}'
panel-sizes='{"0":32,"1":32}'
scroll-icon-action='CYCLE_WINDOWS'
scroll-panel-action='SWITCH_WORKSPACE'
show-appmenu=false

[org/gnome/shell/extensions/forge]
focus-border-toggle=true
tiling-mode-enabled=true
resize-amount=uint32 30
window-gap-hidden-on-single=false
window-gap-size=uint32 3
window-gap-size-increment=uint32 1
primary-layout-mode='tiling'
tiling-mode-enabled=true

[org/gnome/shell/extensions/simple-system-monitor]
cpu-usage-text='󰈐'
memory-usage-text='󰍛'
download-speed-text='󰇚'
upload-speed-text='󰕒'
extension-position='right'
font-family='Sans'
font-size=' 13'
font-weight=600
is-cpu-usage-enable=true
is-download-speed-enable=true
is-memory-usage-enable=true
is-upload-speed-enable=true
item-separator='  '
refresh-interval=1
show-extra-spaces=true
show-percent-sign=true

#== Nautilus ==#

[org/gnome/nautilus/compression]
default-compression-format='zip'

[org/gnome/nautilus/list-view]
default-zoom-level='medium'
use-tree-view=true

[org/gnome/nautilus/preferences]
default-folder-viewer='list-view'
migrated-gtk-settings=true
search-filter-time-type='last_modified'
search-view='list-view'

[org/gnome/shell/extensions/forge/keybindings]
focus-border-toggle=@as []
window-gap-size-increase=@as []
window-gap-size-decrease=@as []
con-split-layout-toggle=@as []
con-split-horizontal=@as []
con-split-vertical=@as []
con-stacked-layout-toggle=['<Super>s']
con-tabbed-layout-toggle=['<Super>t']
con-tabbed-showtab-decoration-toggle=@as []
window-swap-left=@as []
window-swap-down=@as []
window-swap-up=@as []
window-swap-right=@as []
window-move-left=['<Super><Shift>h', '<Super><Shift>Left']
window-move-down=['<Super><Shift>j', '<Super><Shift>Down']
window-move-up=['<Super><Shift>k', '<Super><Shift>Up']
window-move-right=['<Super><Shift>l', '<Super><Shift>Right']
window-focus-left=['<Super>h', '<Super>Left']
window-focus-down=['<Super>j', '<Super>Down']
window-focus-up=['<Super>k', '<Super>Up']
window-focus-right=['<Super>l', '<Super>Right']
window-toggle-float=['<Super>g']
window-toggle-always-float=@as []
workspace-active-tile-toggle=@as []
prefs-tiling-toggle=@as []
mod-mask-mouse-tile='None'
window-swap-last-active=@as []
window-resize-left-increase=['<Super><Ctrl>h', '<Super><Ctrl>Left']
window-resize-down-increase=['<Super><Ctrl>j', '<Super><Ctrl>Down']
window-resize-up-increase=['<Super><Ctrl>k', '<Super><Ctrl>Up']
