port: {{ .myHttpProxyPort }}
socks-port: {{ .mySocksProxyPort }}
mode: rule
external-controller: localhost:9090
profile:
  store-selected: true
proxy-providers:
  subscription:
    type: http
    url: {{ .clashSubscription }}
    path: ./subscription.yaml
    interval: 7200
    health-check:
      enable: true
      lazy: true
      interval: 3600
      url: http://www.gstatic.com/generate_204
proxy-groups:
  - name: auto
    type: select
    lazy: true
    use:
      - subscription
rules:
  - GEOIP,CN,DIRECT
  - MATCH,auto
