{
  "$schema": "https://github.com/TypeScriptToLua/TypeScriptToLua/raw/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "lua"
  },
  "tstl": {
    "buildMode": "library"
  },
  "include": ["src/**/*"]
}
