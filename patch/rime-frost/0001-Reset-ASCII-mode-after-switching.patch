diff --git a/rime_frost.schema.yaml b/rime_frost.schema.yaml
index 2edbace..40642f0 100644
--- a/rime_frost.schema.yaml
+++ b/rime_frost.schema.yaml
@@ -24,6 +24,7 @@ schema:
 # abbrev: 默认的缩写取 states 的第一个字符，abbrev 可自定义一个字符
 switches:
   - name: ascii_mode
+    reset: 0
     states: [ 中, Ａ ]
   - name: ascii_punct  # 中英标点
     states: [ ¥, $ ]
